<% include ../../_base/head.ejs %>
<% include ../../_base/css.ejs %>
<% include ../../_base/container.ejs %>
<% include ../../_base/header.ejs %>
<div class="app-container container">
    <div class="container-header"><h2><%= title %></h2></div>
    <div class="container-content">
        <div id="" class="col-lg-12">
            <form class="form-horizontal" id="p_form">
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">产品名称</label>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="p_name" placeholder="请您输入产品名称">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* 产品名称</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">产品标题</label>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="p_title" placeholder="请您输入产品标题">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">产品分类</label>

                    <div class="col-lg-2">
                        <select class="form-control" id="p_catalog_id"></select>
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">产品摘要</label>

                    <div class="col-lg-6">
                        <textarea class="form-control" id="p_abstract" placeholder="请输入产品摘要"></textarea>
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">产品标签</label>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="p_tags" placeholder="请输入产品标签">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">是否置顶</label>

                    <div class="col-lg-6">
                        <input type="checkbox" id="p_top">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">产品详情</label>

                    <div class="col-lg-10">
                        <div id="p_editor"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        <button id="p_reset" type="reset" class="btn btn-primary wi-10e">重置</button>
                        <button id="p_submit" type="button" class="btn btn-primary wi-10e ml-2e">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../../_base/footer.ejs %>
<% include ../../_base/javascript.ejs %>
<% include ../../../_base/wangEditor.js.ejs %>
<script src="/src/add.production.admin.min.js"></script>
<% include ../../_base/foot.ejs %>