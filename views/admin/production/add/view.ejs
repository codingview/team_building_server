                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 control-label">产品摘要</label>

                    <div class="col-sm-6">
                        <textarea class="form-control" id="p_abstract" placeholder="请输入产品摘要"></textarea>
                    </div>
                    <div class="col-sm-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 control-label">产品标签</label>

                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="p_tags" placeholder="请输入产品标签">
                    </div>
                    <div class="col-sm-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 control-label">产品</label>

                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="p_" placeholder="">
