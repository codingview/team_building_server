<div class="app-container container">
    <div class="container-header"><h2><%= title %></h2></div>
    <div class="container-content">
        <div class="col-lg-12">
            <form class="form-horizontal" id="e_form">
                <input type="hidden" id="e_id" value="<%= detail?detail.id:'' %>">
                <div class="form-group">
                    <label for="e_name" class="col-lg-2 control-label">案例名称</label>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="e_name" placeholder="请您输入案例名称"
                               value="<%= detail ? detail.name : '' %>">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* 案例名称</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_title" class="col-lg-2 control-label">案例标题</label>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="e_title" placeholder="请您输入案例标题"
                               value="<%= detail ? detail.title : '' %>">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_catalog_id" class="col-lg-2 control-label">案例分类</label>

                    <div class="col-lg-2">
                        <input type="hidden" id="e_catalog_id_val" value="<%= detail ? detail.catalog_id : '' %>">
                        <select class="form-control" id="e_catalog_id"></select>
                    </div>
                    <div class="col-lg-4 col-lg-offset-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_icon" class="col-lg-2 control-label">案例缩略图</label>

                    <div class="col-lg-3">
                        <input type="file" class="form-control" id="e_icon">
                        <input type="hidden" id="e_icon_val" value="0">
                    </div>
                    <div class="col-lg-4 col-lg-offset-3">
                        <span class="input-remark">* 用于显示在案例列表中的缩略图，强制重置为320*240的宽高</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_abstract" class="col-lg-2 control-label">案例摘要</label>

                    <div class="col-lg-6">
                        <textarea class="form-control" id="e_abstract"
                                  placeholder="请输入案例摘要"><%= detail ? detail.abstract : '' %></textarea>
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* 用于显示在案例列表中的简略说明</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_tags" class="col-lg-2 control-label">案例标签</label>

                    <div class="col-lg-6">
                        <input type="text" class="form-control" id="e_tags" placeholder="请输入案例标签"
                               value="<%= detail ? detail.tags : '' %>">
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_top" class="col-lg-2 control-label">是否置顶</label>

                    <div class="col-lg-6">
                        <input type="checkbox" id="e_top" <%= detail && detail.sequence === 0 ? 'checked' : '' %>>
                    </div>
                    <div class="col-lg-4">
                        <span class="input-remark">* </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="e_editor" class="col-lg-2 control-label">案例详情</label>

                    <div class="col-lg-10">
                        <div id="e_editor"><%- detail ? detail.rich_text : '' %></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        <button id="e_reset" type="reset" class="btn btn-primary wi-10e">清空</button>
                        <button id="e_submit" type="button" class="btn btn-primary wi-10e ml-2e">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>