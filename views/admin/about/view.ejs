<% include ../_base/head.ejs %>
<% include ../_base/css.ejs %>
<% include ../_base/container.ejs %>
<% include ../_base/header.ejs %>
<div class="app-container container">
    <div class="container-header">
        <h2><%= title %></h2>
        <hr/>
        <h4 style="color:red;">
            该页面中页面编辑先使用
            <a target="_blank" href="http://ueditor.baidu.com/website/onlinedemo.html">UEditor编辑器</a>
            然后复制粘贴过来,其中图片不要使用上传功能,直接放入文本框内即可
        </h4>
    </div>
    <div class="container-title mt-2e">
        <div class="form-inline">
            <div class="form-group">
                <label for="about_module">选择模块</label>
                <select id="about_module" class="form-control ml-2e">
                    <% menu.forEach(function (m){ %>
                    <option value="<%= m.active %>"><%= m.title %></option>
                    <% }); %>
                </select>
            </div>
            <button class="btn btn-primary wi-6e ml-2e" id="about_submit">保存</button>
        </div>
    </div>
    <div class="container-content" id="about_content"></div>
</div>
<% include ../_base/footer.ejs %>
