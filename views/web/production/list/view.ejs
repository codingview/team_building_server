<% include ../../_base/head.ejs %>
<% include ../../_base/css.ejs %>
<link href="/stylesheets/web/pages/production.min.css" rel="stylesheet">
<% include ../../_base/container.ejs %>
<% include ../../_base/header.ejs %>
<div class="app-container">
    <div class="container-header">
        <div class="container">
            <nav class="navbar navbar-inverse">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <% catalogs.forEach(function (catalog) {
                        if('children' in catalog){ %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                               role="button" aria-haspopup="true" aria-expanded="false"><%= catalog.name %>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <% catalog.children.forEach(function (child) { %>
                                <li><a href="?cid=<%= child.id %>"><%= child.name %></a></li>
                                <% }) %>
                            </ul>
                        </li>
                        <% }else{ %>
                        <li><a href="?cid=<%= catalog.id %>"><%= catalog.name %></a></li>
                        <% }}) %>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="container-production">
        <div class="container">
            <div class="col-lg-12">
                <div class="production-list" id="production_list"></div>
            </div>
        </div>
    </div>
</div>
<% include ../../_base/footer.ejs %>
<% include ../../_base/javascript.ejs %>
<script>
    var DEFAULT_CATALOG_ID = <%= default_catalog_id %>; // 默认加载的分类编号
</script>
<script src="/src/production.min.js"></script>
<% include ../../_base/foot.ejs %>